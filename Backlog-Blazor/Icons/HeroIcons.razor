@code {
    
    [Parameter] 
    public HeroIcon Icon { get; set; }

    [Parameter]
    public string Class { get; set; } = "";

    private string IconSvg { get; set; } = "";
    
    protected override void OnInitialized()
    {
        IconSvg = Icon switch
        {
            HeroIcon.Bars3_Outline => @"<svg xmlns=""http://www.w3.org/2000/svg"" fill=""none"" viewBox=""0 0 24 24"" stroke-width=""1.5"" stroke=""currentColor"" class=""w-6 h-6"">
                                    <path stroke-linecap=""round"" stroke-linejoin=""round"" d=""M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"" />
                                </svg>",

            _ => IconSvg
            };
    }

    public async Task Spin()
    {
        if (!Class.Contains("animate-spin"))
            Class += " animate-spin";
    }

    public async Task StopSpin()
    {
        Class = Class.Replace("animate-spin", "").Trim();
    }
    
    public enum HeroIcon
    {
        Bars3_Outline,
        AdjustmentsHorizontal_Solid,
        Bars2_Outline,
        Plus_Outline,
        PencilSquare_Solid,
        Pencil_Solid,
        ArrowPath_Outline,
        CheckCircle_Solid
    }
}