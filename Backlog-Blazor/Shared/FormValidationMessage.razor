@using System.Linq.Expressions
@typeparam TValue

<ValidationMessage For="For" class=" @Class" />

@code {
    [Parameter]  
    public Expression<Func<TValue>>? For { get; set; } 
    
    [Parameter]
    public string Class
    {
        get => "pt-1.5 text-sm font-semibold text-red-700 " + _class;
        set => _class = value;
    }

    private string _class;

}